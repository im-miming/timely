<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:elevation="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Category"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/categoryNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Category Name"
        android:background="@drawable/bg_edit_text"
        android:textSize="15sp"
        android:padding="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Color:"
        android:textSize="16sp" />

    <!-- Color options go here (you can use RadioButtons, ImageViews, etc.) -->
    <LinearLayout
        android:id="@+id/colorOptionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <!-- Circular color options -->
        <ImageView
            android:id="@+id/colorViolet"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_select_violet" />

        <ImageView
            android:id="@+id/colorYellow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_select_yellow" />

        <ImageView
            android:id="@+id/colorGreen"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_select_green" />

        <ImageView
            android:id="@+id/colorRed"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_select_red" />

        <ImageView
            android:id="@+id/colorBlue"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_select_blue" />

        <ImageView
            android:id="@+id/colorOrange"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_select_orange" />

        <ImageView
            android:id="@+id/colorPink"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="10dp"
            android:background="@drawable/bg_select_pink" />
        <!-- Add more color options as needed -->

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <TextView
            android:id="@+id/cancelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#004aad"
            android:padding="16dp"
            android:paddingEnd="0dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/saveTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#004aad"
            android:padding="16dp"
            android:paddingEnd="0dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

</LinearLayout>